{% extends 'base.html.twig' %}

{% block title %}Hello WebsiteController!
{% endblock %}

{% block content %}
	<div class="row mb-3">
		<div class="col-md-6 center-y">
			<h1>Ajouter un site</h1>
			{{ form_start(form) }}

			{{ form_row(form.url) }}
			{{ form_row(form.server) }}

			<button type="submit" class="btn btn-outline-primary float-end">Enregistrer</button>

			{{ form_end(form) }}
		</div>
		<div class="col-md-6">
			<img src="{{ asset("build/images/website.svg") }}" alt="Serveur" class="w-100">
		</div>
	</div>
{% endblock %}
