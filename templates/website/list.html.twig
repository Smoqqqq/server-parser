{% extends "base.html.twig" %}

{% block content %}

	<h1>Liste des sites</h1>
	<table class="datatable">
		<thead>
			<tr>
				<td>Url</td>
				<td>Serveur</td>
			</tr>
		</thead>
		<tbody>
			{% for website in websites %}
				<tr>
					<td><b>{{ website.url }}</b></td>
					<td>
						{{ website.server.name }}&nbsp;
						<a href="{{ path("app_server_read", { id : website.server.id }) }}" class="btn btn-outline-secondary float-end" title="Voir le serveur">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hdd-rack" viewbox="0 0 16 16">
								<path d="M4.5 5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1zM3 4.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm2 7a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm-2.5.5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
								<path d="M2 2a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h1v2H2a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1a2 2 0 0 0-2-2h-1V7h1a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2zm13 2v1a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm0 7v1a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-1a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm-3-4v2H4V7h8z"/>
							</svg>&nbsp;
                            Voir le serveur
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}