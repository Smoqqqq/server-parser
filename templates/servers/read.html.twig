{% extends "base.html.twig" %}

{% block content %}

	<div class="server-infos">
		<h1>Server
			{{ server.name }}
			<a href="{{ path("app_server_edit", { id : server.id }) }}" class="btn btn-outline-warning">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewbox="0 0 16 16">
					<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
				</svg>
				Modifier le serveur
			</a>
			<a href="{{ path("app_server_parse", { id : server.id }) }}" class="btn btn-outline-primary">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
					<path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
				</svg>
				Actualiser les sites
			</a>
		</h1>
		<p class="copy-on-click" data-value="{{ server.host }}">Hôte:
			<span class="value">{{ server.host }}</span></p>
		<p class="copy-on-click" data-value="{{ server.username }}">Nom d'utilisateur:
			<span class="value">{{ server.username }}</span></p>
		<p class="copy-on-click" data-value="{{ server.password }}">Mot de passe:
			<span class="value">{{ server.password }}</span></p>
		<p class="copy-on-click" data-value="{{ server.updatedAt|date("d/m/Y H:i") }}">Mis a jour le :
			<span class="value">{{ server.updatedAt|date("d/m/Y H:i") }}</span></p>
		<p class="copy-on-click" data-value="{{ server.rootDirectory }}">Dossier raçine :
			<span class="value">{{ server.rootDirectory }}</span></p>
		<p><u>Cliquez sur une ligne pour la copier <span id="cursor">|</span></u></p>
	</div>

	<hr>

	<table class="datatable">

		<thead>
			<tr>
				<td>Url</td>
			</tr>
		</thead>

		<tbody>
			{% for site in server.websites %}
				<tr>
					<td>{{ site.url }}
						<a href="http://{{ site.url }}" target="_blank" rel="noopener noreferrer" title="Ouvrir dans un nouvel onglet" class="ms-2">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-up-right" viewbox="0 0 16 16">
								<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
								<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
							</svg>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>

{% endblock %}
